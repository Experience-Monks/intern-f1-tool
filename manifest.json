{
  "name": "F1 browser tools",
  "version": "0.0.1",
  "description": "Chrome devtools extension for debugging F1.",
  "devtools_page": "devtoolsBackground.html",
  "manifest_version": 2,
  "permissions": [
    "tabs",
    "<all_urls>"
  ],

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["inject.js"],
      "run_at": "document_start"
    }
  ],

  "background": {
    "scripts": ["background.js"]
  },

  "page_action": {
    "default_title": "F1 Tools"
  },

  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}